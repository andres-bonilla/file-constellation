{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES6",
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "declarationMap": true,
    "baseUrl": ".",
    "types": ["vitest/importMeta"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
